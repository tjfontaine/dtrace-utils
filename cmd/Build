CMDS += dtrace
dtrace_CPPFLAGS = -Ilibdtrace -Ilibproc -Ilibctf -D_LONGLONG_TYPE
dtrace_TARGET = dtrace
dtrace_DIR := $(current-dir)
dtrace_SOURCES = dtrace.c
dtrace_DEPS = libdtrace.so libctf.a libport.a
dtrace_LIBS = -L$(objdir) -ldtrace -lctf -lport

install::
	mkdir -p $(SBINDIR) $(MANDIR)
	$(call describe-install-target,$(SBINDIR),dtrace)
	install -m 755 -o root -g root $(objdir)/dtrace $(SBINDIR)
	$(call describe-install-target,$(MANDIR),dtrace.1)
	install -m 644 -o root -g root $(dtrace_DIR)/dtrace.1 $(MANDIR)
