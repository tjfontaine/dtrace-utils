verbose ?= no

help::
	@printf "Options:\n\n" >&2
	@printf "make verbose=yes [target]      Enable verbose building\n" >&2
	@printf "\n" >&2

ifeq ($(verbose),no)
override MAKEFLAGS += --silent
endif
