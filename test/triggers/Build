TRIGGERS = testprobe readwholedir mmap bogus-ioctl pid-tst-args1 pid-tst-float pid-tst-fork pid-tst-gcc pid-tst-ret1 pid-tst-ret2 pid-tst-vfork pid-tst-weak1 pid-tst-weak2 proc-tst-sigwait profile-tst-ufuncsort raise-tst-raise1 raise-tst-raise2 raise-tst-raise3 ustack-tst-bigstack ustack-tst-spin

define trigger-template
CMDS += $(1)
TRIGGERS += $(1)
$(1)_DIR := $(current-dir)
$(1)_TARGET = $(1)
$(1)_SOURCES = $(1).c
$(1)_POST := link-trigger
$(1)_NOCFLAGS := --coverage

clean::
	rm -f test/triggers/$(1)
endef

define link-trigger
	rm -f test/triggers/$(notdir $(1))
	ln -s ../../$(1) test/triggers/$(notdir $(1))
endef

$(foreach trigger,$(TRIGGERS),$(eval $(call trigger-template,$(trigger))))
proc-tst-sigwait_LIBS := -lrt

