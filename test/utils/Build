TEST_UTILS = baddof badioctl

define test-util-template
CMDS += $(1)
$(1)_DIR := $(current-dir)
$(1)_TARGET = $(1)
$(1)_SOURCES = $(1).c
$(1)_POST := link-test-util
$(1)_NOCFLAGS := --coverage
$(1)_DEPS = libctf.a libdtrace.a libproc.a libport.a
$(1)_LIBS = -L$(objdir) -lctf -ldtrace -lproc -lport -lelf -lz -lrt -lpthread -ldl

clean::
	rm -f test/utils/$(1)
endef

define link-test-util
	rm -f test/utils/$(notdir $(1))
	ln -s ../../$(1) test/utils/$(notdir $(1))
endef

$(foreach util,$(TEST_UTILS),$(eval $(call test-util-template,$(util))))
